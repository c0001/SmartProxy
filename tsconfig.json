{
	"compileOnSave": true,
	"compilerOptions": {
		"typeRoots": [ "node_modules/@types", "node_modules/web-ext-types" ],
		"outDir": "build-ts",
		"noImplicitAny": false,
		"noEmitOnError": true,
		"removeComments": true,
		"sourceMap": false,
		"target": "ES2021",
		"lib": [ "ES2021", "ESNext", "dom" ],
		"strictNullChecks": false,
		"noUnusedLocals": true
	},
	"exclude": [
		"node_modules",
		"wwwroot"
	]
}